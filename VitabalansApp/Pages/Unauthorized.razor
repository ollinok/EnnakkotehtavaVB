@page "/Unauthorized"
@inject NavigationManager NavMngr

<div class="container">
    <div class="d-flex flex-column align-items-center text-center mt-5">
        <h1>Sinulla ei ole oikeuksia tälle sivulle.</h1>
        <div>
            <button type="button" class="btn vb-bg-turquoise" @onclick="GoToFrontPage">Palaa etusivulle</button>
        </div>
    </div>
</div>


@code {
    private void GoToFrontPage() => NavMngr.NavigateTo("/");

    // Just redirect user back to the front page
    protected override void OnInitialized()
    {
        NavMngr.NavigateTo("/");
    }
}
